set -e

mkdir -p "${BOSH_INSTALL_TARGET}/src/github.com/onsi/ginkgo"
tar xzf cf-rabbitmq-smoke-tests-ginkgo/ginkgo-v1.12.1.tar.gz --strip-components=1 -C "${BOSH_INSTALL_TARGET}/src/github.com/onsi/ginkgo"

mkdir -p "${BOSH_INSTALL_TARGET}/src/github.com/nxadm/tail"
tar xzf cf-rabbitmq-smoke-tests-ginkgo/tail-v1.4.4.tar.gz --strip-components=1 -C "${BOSH_INSTALL_TARGET}/src/github.com/nxadm/tail"

export GOPATH="${BOSH_INSTALL_TARGET}"
export PATH="${PATH}:/var/vcap/packages/cf-rabbitmq-smoke-tests-golang/bin"

export GOCACHE=$PWD/cache

go install -v github.com/onsi/ginkgo/ginkgo

rm -rf "${BOSH_INSTALL_TARGET}/src"
